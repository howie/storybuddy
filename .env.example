# StoryBuddy Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/db/storybuddy.db

# =============================================================================
# Storage
# =============================================================================
DATA_DIR=./data

# =============================================================================
# ElevenLabs (Voice Cloning TTS)
# Get your API key at: https://elevenlabs.io/
# =============================================================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# Azure Speech Services (STT)
# Get your API key at: https://azure.microsoft.com/en-us/products/ai-services/speech-to-text
# =============================================================================
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastasia

# =============================================================================
# Anthropic Claude (LLM for story generation and Q&A)
# Get your API key at: https://console.anthropic.com/
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Google Cloud Speech-to-Text (for interactive mode real-time transcription)
# Get credentials at: https://cloud.google.com/speech-to-text/docs/before-you-begin
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-cloud-credentials.json

# =============================================================================
# Email (SMTP for transcript notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=StoryBuddy <noreply@storybuddy.app>
